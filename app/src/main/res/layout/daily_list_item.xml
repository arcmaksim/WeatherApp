<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="64dp"
                android:paddingStart="64dp"
                android:paddingRight="32dp"
                android:paddingEnd="32dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                tools:background="@color/dailyListItemBackground">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/bg_temperature"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/circleImageView"
        android:contentDescription="@string/circleImageViewContentDesc"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/clear_day"
        android:paddingLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/circleImageView"
        android:layout_toEndOf="@id/circleImageView"
        android:id="@+id/iconImageView"
        android:contentDescription="@string/iconImageViewContentDesc"/>

    <TextView
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:paddingLeft="10dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iconImageView"
        android:layout_toEndOf="@+id/iconImageView"
        android:id="@+id/dayNameLabel"
        tools:text="Wednesday"/>

    <TextView
        tools:text="25"
        android:textColor="@color/dailyListItemTemperatureText"
        android:layout_alignTop="@id/circleImageView"
        android:layout_alignBottom="@id/circleImageView"
        android:layout_alignLeft="@id/circleImageView"
        android:layout_alignStart="@id/circleImageView"
        android:layout_alignRight="@id/circleImageView"
        android:layout_alignEnd="@id/circleImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/temperatureLabel"/>
</RelativeLayout>